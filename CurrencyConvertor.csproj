    <Nullable>enable</Nullable>
    <UserSecretsId>5c1bbb3d-f453-4f26-b600-4de5808617f2</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" Version="6.0.1" />
